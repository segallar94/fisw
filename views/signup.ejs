<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="https://bootswatch.com/united/bootstrap.min.css">
  <link rel="stylesheet" href="https://bootswatch.com/united/bootstrap.css">
  <style>
    body        { padding-top:80px; }
    fieldset {
        border:1px solid #999;
        border-radius: 50px;
        background-color: #fbfdff;
        padding-left: 100px;
        padding-bottom: 100px;
        padding-right: 100px;
        padding-top: 100px;
    }
  </style>
</head>
<body style="background-color: #faffb0">
<div class="container">

  <div class="col-sm-6 col-sm-offset-3">
<center>
    <h1><span class="fa fa-sign-in"></span> Registrar encuestador</h1>
      </center>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
    <div class="alert alert-dismissible alert-danger"><%= message %></div>
    <% } %>

    <!-- SIGNUP FORM -->
    <form action="/signup" method="post">
        <fieldset>
      <div class="form-group">
        <label>Email</label>
        <input type="text" class="form-control" name="email">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" name="password">
      </div>

      <button type="submit" class="btn btn-primary btn-lg">Enviar</button>
        </fieldset>
    </form>

    <hr>

    <h3>Or <a href="/profile-admin">back</a>.</h3>

  </div>

</div>
</body>
</html>